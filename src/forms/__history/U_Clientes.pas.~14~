unit U_Clientes;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.WinXCtrls,
  Vcl.ExtCtrls, Vcl.Buttons, Data.DB, Vcl.Grids, Vcl.DBGrids, U_DataModule;

type
  TfrmClientes = class(TForm)
    Panel1: TPanel;
    SearchBox1: TSearchBox;
    btnEditarCliente: TBitBtn;
    btnAdicionarCliente: TBitBtn;
    DBGridClientes: TDBGrid;
  private
    { Private declarations }
    procedure ConfigurarGrid;
  public
    { Public declarations }
  end;

var
  frmClientes: TfrmClientes;

implementation

{$R *.dfm}
procedure TfrmClientes.ConfigurarGrid;
begin
  DBGridClientes.Columns.Clear;

  // Código
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'CODIGO';
    Title.Caption := 'Código';
    Width := 60;
  end;

  // Nome
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'NOME';
    Title.Caption := 'Cliente';
    Width := 220;
  end;

  // CPF
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'CPF';
    Title.Caption := 'CPF';
    Width := 110;
  end;

  // Telefone
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'TELEFONE';
    Title.Caption := 'Telefone';
    Width := 120;
  end;

  // Cidade
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'CIDADE';
    Title.Caption := 'Cidade';
    Width := 150;
  end;

  // Estado
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'ESTADO';
    Title.Caption := 'UF';
    Width := 50;
  end;

  // Status (Ativo / Inativo)
  with DBGridClientes.Columns.Add do
  begin
    FieldName := 'STATUS';
    Title.Caption := 'Status';
    Width := 80;
  end;
end;


end.
