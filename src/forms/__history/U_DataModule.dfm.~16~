  object qryServicos: TFDQuery
    Connection = FDConnection
    SQL.Strings = (
      'SELECT'
      '    CODIGO,'
      '    NOME,'
      '    DESCRICAO,'
      '    DATE_FORMAT(DATA_CADASTRO, '#39'%d/%m/%Y'#39') AS DATA_CADASTRO'
      'FROM TB_SERVICOS;')
    Left = 80
    Top = 384
